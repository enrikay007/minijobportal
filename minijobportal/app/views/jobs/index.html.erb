<br>
<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item">
				<%= link_to "Your Listing", jobs_path, class: "sidebar-link active" %>
			</li>
			<li class="sidebar-item"><%= link_to "Your Applications", jobs_path, class: "sidebar-link"%></li>
		</ul>
	</div>

	<div class="col-md-9">
	<div class="panel panel-default">
		<div class="panel-heading">Listing
		</div>
		<div class="panel-body">
			<% @jobs.each do |job| %>
				<div class="row">
					<div class="col-md-3">
						<%= image_tag job.photos[0].image.url(:thumb) if job.photos.length > 0%>
					</div>
					
					<div class="col-md-3">
						<h4><%= job.company_name %></h4>
						<%= job.job_position %>
					</div>

					<div class="col-md-3">
						<h2><%= job.job_status %>
					</div>

					<div class="col-md-3 right">
						<h4><%= link_to "View Job", edit_job_path(job), class: "btn btn-primary"%></h4>
					</div>
				</div>				
				<hr>
			<% end %>
			<%= will_paginate %>
			
		</div>
		
	</div>
		
	</div>
</div>